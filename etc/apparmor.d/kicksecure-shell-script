#include <tunables/global>

## Generic profile for Kicksecure shell scripts.

/usr/lib/security-misc/pam_tally2-info flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}

/usr/lib/security-misc/pam_only_if_login flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}

/usr/lib/security-misc/pam-abort-on-locked-password flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}

/usr/lib/security-misc/permission-lockdown flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}

/usr/lib/security-misc/remove-system.map flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
  
  owner / r,
  owner /boot/ r,
  owner /usr/src/{,*/} r,
  owner /lib/modules/{,*/,*/*/} r,
  owner /{,boot/}System.map* rw,
  owner /usr/src/*/System.map* rw,
  owner /lib/modules/*/*/System.map* rw,
}

/usr/lib/security-misc/panic-on-oops flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}

/usr/lib/helper-scripts/first-boot-skel flags=(attach_disconnected) {
  #include <abstractions/kicksecure-shell-script>
}
