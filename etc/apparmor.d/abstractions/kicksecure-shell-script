  ## Generic profile for Kicksecure shell scripts.

  #include <abstractions/base>
  #include <abstractions/bash>

  capability chown,
  capability dac_override,
  capability dac_read_search,
  capability fowner,
  capability fsetid,

  /usr/lib/security-misc/* r,
  /{,usr/}sbin/pam_tally2 mrix,
  /{,usr/}bin/bash rix,
  /{,usr/}bin/chmod mrix,
  /{,usr/}bin/touch mrix,
  /usr/bin/basename mrix,
  /usr/bin/passwd mrix,
  /usr/bin/id rix,
  /usr/bin/cut mrix,
  /usr/bin/tail mrix,
  /usr/bin/diff mrix,
  /bin/echo mrix,
  /bin/mkdir mrix,
  /bin/cat mrix,
  /bin/grep mrix,
  /bin/rm mrix,
  /bin/cp mrix,
  /bin/chown mrix,
  /bin/mktemp mrix,

  ## permission-lockdown and first-boot-skel
  /home/** rw,
  /etc/skel/ r,
  /etc/skel/** rw,

  ## remove-system.map
  /boot/ r,
  /boot/System.map* rw,
  
  ## panic-on-oops
  /proc/sys/kernel/panic_on_oops w,
  /sbin/sysctl mrix,
  
  ## pam-abort-on-locked-password
  owner /etc/shadow r,

  /etc/nsswitch.conf r,
  /etc/passwd r,
  /etc/group r,
  /etc/pam.d/* r,

  owner /var/cache/security-misc/state-files/ rw,
  owner /var/cache/security-misc/state-files/* rw,
  owner /var/cache/anon-base-files/ rw,
  owner /var/cache/anon-base-files/* rw,

  owner /var/log/tallylog rw,
  
  owner /tmp/** rw,
  owner /proc/sys/kernel/osrelease r,
  owner /proc/filesystems r,
  owner /proc/*/loginuid r,
  
  /dev/tty rw,
  /dev/pts/[0-9]* rw,
