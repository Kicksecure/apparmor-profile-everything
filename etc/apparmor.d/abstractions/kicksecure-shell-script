  ## Generic profile for Kicksecure shell scripts.

  #include <abstractions/base>
  #include <abstractions/bash>

  capability chown,
  capability dac_override,
  capability dac_read_search,
  capability fowner,
  capability fsetid,

  /usr/libexec/security-misc/* r,
  /{,usr/}sbin/pam_tally2 mrix,
  /{,usr/}bin/bash rix,
  /{,usr/}bin/chmod mrix,
  /{,usr/}bin/touch mrix,
  /{,usr/}bin/basename mrix,
  /{,usr/}bin/passwd mrix,
  /{,usr/}bin/id rix,
  /{,usr/}bin/cut mrix,
  /{,usr/}bin/tail mrix,
  /{,usr/}bin/diff mrix,
  /{,usr/}bin/echo mrix,
  /{,usr/}bin/mkdir mrix,
  /{,usr/}bin/cat mrix,
  /{,usr/}bin/grep mrix,
  /{,usr/}bin/rm mrix,
  /{,usr/}bin/cp mrix,
  /{,usr/}bin/chown mrix,
  /{,usr/}bin/mktemp mrix,
  /{,usr/}bin/shred mrix,

  ## permission-lockdown and first-boot-skel
  /home/** rw,
  /etc/skel/ r,
  /etc/skel/** rw,

  ## panic-on-oops
  @{PROC}/sys/kernel/panic_on_oops w,
  /{,usr/}sbin/sysctl mrix,

  ## pam-abort-on-locked-password
  owner /etc/shadow r,

  /etc/nsswitch.conf r,
  /etc/passwd r,
  /etc/group r,
  /etc/pam.d/* r,

  owner /var/cache/security-misc/state-files/{,*} rw,
  owner /var/cache/anon-base-files/{,*} rw,

  owner /var/log/tallylog rw,

  owner /tmp/** rw,
  owner @{PROC}/sys/kernel/osrelease r,
  owner @{PROC}/filesystems r,
  owner @{PROC}/@{pid}/loginuid r,

  /dev/tty rw,
  /dev/pts/[0-9]* rw,
