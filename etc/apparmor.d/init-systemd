#include <tunables/global>

## Experimental full system AppArmor policy for Whonix.

profile init-systemd /lib/systemd/** flags=(attach_disconnected) {
  #include <abstractions/init-systemd>
}

profile init-systemd-debug /lib/systemd/** flags=(attach_disconnected) {
  #include <abstractions/init-systemd>
}

profile init-systemd-superroot /lib/systemd/** flags=(attach_disconnected) {
  #include <abstractions/init-systemd>
  
  owner /proc/sys/** rw,
}
