#include <tunables/global>

profile lsblk /{,usr/}bin/lsblk flags=(attach_disconnected) {
  #include <abstractions/base>

  /{,usr/}bin/lsblk mrix,

  @{sys}/block/ r,
  @{sys}/devices/pci**/block/{s,v}da/{,**} r,

  @{PROC}/@{pids}/mount{s,info} r,
  @{PROC}/swaps r,

  /run/udev/data/* r,

  owner /dev/pts/[0-9]* rw,
}
